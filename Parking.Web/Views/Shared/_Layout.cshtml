<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/bootstrapplugin")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>                
               @Html.ActionLink("应用程序","index","home",new { area=""},htmlAttributes:new {@class="navbar-brand" })            
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("主页", "index", "home", new { area = "" }, htmlAttributes: new { @class = "" })</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button">系统管理<strong class="caret"></strong></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Index", "Manage",new { area="SystemManager"})">系统维护</a></li>
                            <li><a href="#">系统配置</a></li>
                            <li class="divider"></li>
                            <li><a href="#">故障汇总</a></li>
                            <li><a href="#">手动指令</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown">顾客管理<strong class="caret"></strong></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">IC卡管理</a></li>
                            <li><a href="#">车主管理</a></li>                            
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown">收费管理<strong class="caret"></strong></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">IC卡缴费</a></li>
                            <li><a href="#">收费标准</a></li>
                            <li class="divider"></li>
                            <li><a href="#">计费制定</a></li>
                            <li><a href="#">收费测试</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown">统计报表<strong class="caret"></strong></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">操作日志</a></li>
                            <li><a href="#">故障日志</a></li>
                            <li><a href="#">设备状态日志</a></li>
                        </ul>
                    </li>                                       
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>   
    <div class="container body-content">     
        @RenderBody()
        <div class="row">
            <hr />
            <footer class="text-center">
                <p>@DateTime.Now.Year&nbsp;&nbsp;&nbsp;&copy;&nbsp;深圳中集智能停车有限公司 &nbsp;&nbsp;&nbsp;版权所有</p>
                <p>
                    <a href="@Url.Action("Contact","Home")" target="_blank">关于我们</a>&nbsp;&nbsp;&nbsp;&nbsp;
                    <a href="@Url.Action("About","Home")" target="_blank">微信公众号</a>
                </p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/signalr")
    @Scripts.Render("~/bundles/plugin")
    @RenderSection("scripts", required: false)

    <script src="~/signalr/hubs"></script>

</body>
</html>
