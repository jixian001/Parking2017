
@{
    ViewBag.Title = "系统记录时间";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="form-horizontal">
            <h4 class="margin-base-vertical">修改系统记录时间</h4>
            <hr />
            <div class="form-group">
                <label class="col-md-2 control-label">记录时间</label>
                <div class="col-md-10">
                    <input type="date" class="form-control form_datetime" disabled />
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">期望时间</label>
                <div class="col-md-10">
                    <input type="date" class="form-control form_datetime" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-2">
                    <input type="button" value="修 改" class="btn btn-default" />
                </div>               
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(function () {

            $('.form_datetime').datetimepicker({
                language: 'zh-CN',
                weekStart: 1,
                todayBtn: 1,
                autoclose: 1,
                todayHighlight: 1,
                startView: 2,
                forceParse: 0,
                showMeridian: 1
            });

        });
    </script>
}

