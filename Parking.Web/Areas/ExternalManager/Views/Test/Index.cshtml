
@{
    ViewBag.Title = "test";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3 form-horizontal">
        <h4 class="margin-base-vertical">测试</h4>
        <hr />       
        <div class="form-group">           
            <label class="control-label col-md-2">库区</label>
            <div class="col-md-10">              
                <input type="text" class="form-control" id="wh" value="1"/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">车厅列</label>
            <div class="col-md-10">
                <input type="text" class="form-control" id="col" value="10"/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">外形尺寸</label>
            <div class="col-md-10">
                <input type="text" class="form-control" id="checkcode" value="111" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="提交" id="btn" class="btn btn-success" />
            </div>
        </div>
    </div>
</div>
<div id="disp"></div>

@section scripts{
    <script>
        $(function () {

            $("#btn").click(function () {

                $.ajax({
                    type: "GET",
                    url: "@Url.Action("AllocateTest")",
                    data: { "warehouse": $("#wh").val(), "hallCol": $("#col").val(), "checkcode": $("#checkcode").val() },
                    dataType: "text",
                    cache: false,
                    success: function (nback) {
                        alert(nback);
                        $("#disp").html("<p class='text-info'> address - "+nback+"</p>");
                    }
                });

            });

        });
    </script>

    }


